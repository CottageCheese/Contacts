@model ContactsLibrary.ContactEdit
@using Csla.Web.Mvc

@{
  ViewData["Title"] = "Edit Contact";
}

<h1>Edit</h1>

<h4>Contact Edit</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        @Html.DisplayFor(model => model.Id)
      </div>
        <div class="form-group">
            <label asp-for="Firstname" class="control-label"></label>
            <input asp-for="Firstname" class="form-control" />
            <span asp-validation-for="Firstname" class="text-danger"></span>
            <span class="text-danger">@Html.ErrorFor(model => model.Firstname)</span>
            <span class="text-warning">@Html.WarningFor(model => model.Firstname)</span>
            <span class="text-info">@Html.InformationFor(model => model.Firstname)</span>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
            <span class="text-danger">@Html.ErrorFor(model => model.Surname)</span>
            <span class="text-warning">@Html.WarningFor(model => model.Surname)</span>
            <span class="text-info">@Html.InformationFor(model => model.Surname)</span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <span class="text-danger">@Html.ErrorFor(model => model.Email)</span>
            <span class="text-warning">@Html.WarningFor(model => model.Email)</span>
            <span class="text-info">@Html.InformationFor(model => model.Email)</span>
        </div>
        <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
